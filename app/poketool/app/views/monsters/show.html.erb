<table>
  <tr>
    <td>No. </td>
    <td><%= @monster.no %></td>
    <td><%= @monster.screen_name %></td>
  </tr>
</table>
<table>
  <tr>
    <td>タイプ</td>
    <td><%= @monster.type1.screen_name %></td>
